<%= form_with model: [post, Comment.new], class: "space-y-4" do |form| %>
  <div>
    <label class="block font-medium text-gray-300 mb-1">Your Comment</label>
    <%= form.text_area :content, rows: 5, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <%= form.submit "Post Comment", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
<% end %>